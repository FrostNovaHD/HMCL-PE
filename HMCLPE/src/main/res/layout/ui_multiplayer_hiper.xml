<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ui_hiper"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/load_hiper_conf_progress"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/hiper_layout"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/hiper_verify_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hiper_ui_verify_launch"
                        android:textSize="@dimen/text_size_middle"
                        android:textColor="@color/colorPureBlack"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/launcher_view_light_gray"
                        android:orientation="vertical">

                        <LinearLayout
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="10dp"
                                android:background="@drawable/launcher_view_blue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_outline_about_black"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:text="@string/hiper_ui_verify_alert"
                                        android:textSize="@dimen/text_size_middle"
                                        android:textColor="@color/colorLinkBlueDark"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hiper_ui_verify_alert_text"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorLinkBlueDark"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/colorDarkGray"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:orientation="horizontal">

                            <TextView
                                android:singleLine="true"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hiper_ui_verify_code"
                                android:textSize="@dimen/text_size_middle"
                                android:textColor="@color/colorPureBlack"/>

                            <EditText
                                android:layout_gravity="center"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:textSize="@dimen/text_size_middle"
                                android:background="@color/colorLightGray"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:id="@+id/hiper_token"/>

                            <ImageView
                                android:layout_marginStart="12dp"
                                android:layout_gravity="center"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/ic_baseline_jump_black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:text="@string/hiper_ui_verify_apply"
                                android:textSize="@dimen/text_size_middle"
                                android:textColor="@color/colorLinkBlue"
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/apply_hiper_token"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/colorDarkGray"/>

                        <LinearLayout
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <Button
                                android:textAllCaps="false"
                                android:singleLine="true"
                                android:layout_gravity="center"
                                android:tag="tint_accent_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/launcher_button_blue"
                                android:text="@string/hiper_ui_verify_launch"
                                android:textColor="@color/colorPureWhite"
                                android:textSize="@dimen/text_size_middle"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:id="@+id/hiper_launch"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/hiper_start_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hiper_ui_start_title"
                        android:textSize="@dimen/text_size_middle"
                        android:textColor="@color/colorPureBlack"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/launcher_view_light_gray"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorPureBlack"
                                    android:text="@string/hiper_ui_start_creator_title"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_baseline_jump_black"/>

                                <TextView
                                    android:layout_marginStart="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorLinkBlue"
                                    android:text="@string/hiper_ui_start_tutorial"
                                    android:id="@+id/creator_tutorial"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="12dp"
                                android:padding="10dp"
                                android:background="@drawable/launcher_view_blue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_outline_about_black"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:text="@string/hiper_ui_start_creator_alert"
                                        android:textSize="@dimen/text_size_middle"
                                        android:textColor="@color/colorLinkBlueDark"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hiper_ui_start_creator_alert_text"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorLinkBlueDark"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:singleLine="true"
                                    android:layout_gravity="center"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hiper_ui_start_port"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorPureBlack"/>

                                <EditText
                                    android:layout_gravity="center"
                                    android:singleLine="true"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="28dp"
                                    android:textSize="@dimen/text_size_middle"
                                    android:background="@color/colorLightGray"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:id="@+id/hiper_port"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:singleLine="true"
                                    android:layout_gravity="center"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hiper_ui_start_gen"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorPureBlack"/>

                                <TextView
                                    android:layout_gravity="center"
                                    android:singleLine="true"
                                    android:layout_marginStart="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPureBlack"
                                    android:textSize="@dimen/text_size_middle"
                                    android:id="@+id/hiper_gen"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>

                                <Button
                                    android:textAllCaps="false"
                                    android:singleLine="true"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/launcher_button_transparent_blue"
                                    android:text="@string/hiper_ui_start_copy"
                                    android:textColor="@color/colorPureBlack"
                                    android:textSize="@dimen/text_size_middle"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:id="@+id/hiper_copy_address"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/colorDarkGray"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorPureBlack"
                                    android:text="@string/hiper_ui_start_participant_title"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_baseline_jump_black"/>

                                <TextView
                                    android:layout_marginStart="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorLinkBlue"
                                    android:text="@string/hiper_ui_start_tutorial"
                                    android:id="@+id/slave_tutorial"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="12dp"
                                android:padding="10dp"
                                android:background="@drawable/launcher_view_blue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_outline_about_black"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:text="@string/hiper_ui_start_participant_alert"
                                        android:textSize="@dimen/text_size_middle"
                                        android:textColor="@color/colorLinkBlueDark"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hiper_ui_start_participant_alert_text"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorLinkBlueDark"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:singleLine="true"
                                    android:layout_gravity="center"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hiper_ui_start_address"
                                    android:textSize="@dimen/text_size_middle"
                                    android:textColor="@color/colorPureBlack"/>

                                <EditText
                                    android:layout_gravity="center"
                                    android:singleLine="true"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="28dp"
                                    android:textSize="@dimen/text_size_middle"
                                    android:background="@color/colorLightGray"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:id="@+id/hiper_address"/>

                                <Button
                                    android:layout_marginStart="12dp"
                                    android:textAllCaps="false"
                                    android:singleLine="true"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/launcher_button_transparent_blue"
                                    android:text="@string/hiper_ui_start_join"
                                    android:textColor="@color/colorPureBlack"
                                    android:textSize="@dimen/text_size_middle"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:id="@+id/hiper_join"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_middle"
                    android:textColor="@color/colorPureBlack"
                    android:text="@string/hiper_ui_about"
                    android:layout_marginTop="18dp"/>

                <LinearLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/launcher_view_light_gray"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_middle"
                        android:textColor="@color/colorPureBlack"
                        android:text="@string/hiper_ui_about_base"/>

                    <ImageView
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_baseline_jump_black"/>

                    <TextView
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:text="@string/hiper_ui_about"
                        android:textSize="@dimen/text_size_middle"
                        android:textColor="@color/colorLinkBlue"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/hiper_about_link"/>

                    <TextView
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:text="@string/hiper_ui_sujv"
                        android:textSize="@dimen/text_size_middle"
                        android:textColor="@color/colorPureBlack"/>

                    <ImageView
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_baseline_jump_black"/>

                    <TextView
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:text="@string/hiper_ui_eula"
                        android:textSize="@dimen/text_size_middle"
                        android:textColor="@color/colorLinkBlue"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/hiper_eula_link"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>